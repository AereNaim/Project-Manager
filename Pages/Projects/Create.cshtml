                <input asp-for="Project.Desc" class="form-control" />
                <span asp-validation-for="Project.Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Client" class="control-label"></label>
                <input asp-for="Project.Client" class="form-control" />
